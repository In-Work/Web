@model UserSettingsModel

@{
    ViewData["Title"] = $"User Settings";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header windows_background">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }
                    <form asp-action="Change" method="post">
                        <div class="form-group mb-4">
                            <label asp-for="UserName" class="form-label"></label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="MinRank" class="form-label"></label>
                            <input asp-for="MinRank" class="form-control" type="nu" />
                            <span asp-validation-for="MinRank" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-secondary w-100">Change Settings</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>