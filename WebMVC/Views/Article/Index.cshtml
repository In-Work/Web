@model IPagedList<ArticleModel>

@{
    ViewData["Title"] = "Articles";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <form asp-action="Agregate" method="post" class="mb-4">
        <button class="btn btn-primary" type="submit">Aggregate</button>
    </form>

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var article in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@article.Title</h5>
                            <p class="card-text">@Html.Raw(article.Description)</p>
                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary" asp-route-articleId="@article.Id" asp-action="Details" asp-controller="Article">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="pagination">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
            {
                LiElementClasses = new[] { "page-item" },
                PageClasses = new[] { "page-link" },
                MaximumPageNumbersToDisplay = 3
            })
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No articles found.
        </div>
    }
</div>