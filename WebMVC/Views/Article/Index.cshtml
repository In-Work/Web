@model List<ArticleModel>

@{
    ViewData["Title"] = "Articles";
}

<a asp-controller="Article" asp-action="Create" class="btn btn-primary">Create Article</a>

@foreach (var article in Model)
{
    <div class="container">
        <div>
            PublicationDate: @article.PublicationDate
        </div>
        <div>
            Source: @article.SourceModel.Title
        </div>
        <dit>
            <h4>@article.Title</h4>
        </dit>
        <dit>@article.Text</dit>
        <dit>@article.Rate</dit>
    </div>

    <div style="display:flex; flex-direction:row; gap:10px;">
        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">Delete</button>

        <form asp-action="Delete" asp-controller="Article" asp-route-id="@article.Id" method="post">
            <button type="submit" class="btn btn-primary">Edit</button>
        </form>
    
        <form asp-action="Details" asp-controller="Article" asp-route-id="@article.Id" method="get">
            <button type="submit" class="btn btn-primary">Details</button>
        </form>
    </div>

    <div class="modal fade" id="confirmDeleteModal" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this item?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="Delete" asp-controller="Article" asp-route-id="@article.Id" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
