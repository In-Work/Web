@using Microsoft.IdentityModel.Tokens
@model ArticleWithCommentsModel

@{
    ViewData["Title"] = "Article Details";
}

<div class="container mt-4">
    <div class="card shadow-sm mb-4">
        <a class="p-3 h1 text-black text-decoration-none" href="@Model.ArticleModel.OriginalUrl">@Model.ArticleModel.Title</a>
        <div class="card-body">
            <p class="card-text">@Html.Raw(Model.ArticleModel.Description)</p>
            <p class="card-text">@Html.Raw(Model.ArticleModel.Text)</p>
        </div>
    </div>

    <div class="card shadow-sm p-3">
        <h4 class="p-3">Comments:</h4>
        @if (!Model.CommentsModels.IsNullOrEmpty())
        {
            @foreach (var comment in Model.CommentsModels)
            {
                <div class="card bg-light m-2">
                    <div class="card-header d-flex  align-items-center align-items-start justify-content-between">
                        <div class="d-flex align-items-center gap-2">
                            <svg height="20" width="20">
                                <circle cx="10" cy="10" r="5" stroke="black" stroke-width="1" fill="gray" />
                            </svg>
                            <div class="h5">@comment.UserName</div>
                        </div>
                        <div class="text-muted">@comment.PublicationDateTime.ToString("dd MMM, hh:mm ")</div>
                    </div>
                    <div class="ms-lg-4">
                        @comment.Text
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card-body">
                <div class="">
                    <p>No comments</p>
                </div>
            </div>
        }

        @if (Context.User.Identity != null && Context.User.Identity.IsAuthenticated)
        {
            <hr />
            <form asp-action="AddComment" method="post">
                <input type="hidden" name="articleId" value="@Model.ArticleModel.Id" />
                <div class="form-group mb-3">
                    <label for="commentText" class="form-label h4 p-2">Add a comment</label>
                    <textarea name="commentText" class="form-control" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-secondary w-100">Submit</button>
                </div>
            </form>
        }
    </div>
</div>